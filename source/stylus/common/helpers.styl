.wrapper
  margin-bottom: 30px
  padding: 20px 5px
  background-color: $color-dark

  +above($breakpoints.sm)
    padding: 30px

  +above($breakpoints.md)
    padding: 30px 30px

  +above($breakpoints.lg)
    padding: 40px 90px

  +above($breakpoints.xxl)
    padding: 50px 90px

  +above($breakpoints.xxxl)
    padding: 50px 110px

.w-10
  width: 10%

.w-35
  width: 35%

.w-45
  width: 45%

.w-55
  width: 55%

.w-65
  width: 65%

.w-90
  width: 90%

.w-100
  width: 100%

.h-30
  height: 40px

.mr-20
  margin-right: 20px

.ml-10
  margin-left: 10px

.mb-20
  margin-bottom: 20px

.mt-20
  margin-top: 20px

.pad-all-20
  padding: 20px

.pad-left-20
  padding-left: 20px

.pad-lg-20
  padding: 0px 15px

  +above($breakpoints.md)
    padding: 20px

.bot-0
  bottom: 0

.top-0
  bottom: 0

.d-none
  display: none

.d-block
  display: block

.d-flex
  display: flex

.f-size-0
  font-size: 0

.close
  transform: translateX(64px)

a.active-link
  fill: $color-blue
  box-shadow: 0px 0px 0px 2px rgba(93, 208, 246, 1)
  -moz-box-shadow: 0px 0px 0px 2px rgba(93, 208, 246, 1)
  -webkit-box-shadow: 0px 0px 0px 2px rgba(93, 208, 246, 1)

.active-logo
  box-shadow: 0px 0px 8px 100px rgba(95, 200, 234, 1) inset

.active-sidebar
  animation: arrow-box 1.5s infinite
  transform: rotate(57deg) skewX(25deg) skewY(1deg)

.active-title
  border: 1px solid red

.stop-anim
  animation: anim 2s infinite

.view
  box-shadow: -3px -14px 14px -12px rgba(0, 0, 0, 0.32) inset
  -moz-box-shadow: -3px -14px 14px -12px rgba(0, 0, 0, 0.32) inset
  -webkit-box-shadow: -3px -14px 14px -12px rgba(0, 0, 0, 0.32) inset

.error
  color: red
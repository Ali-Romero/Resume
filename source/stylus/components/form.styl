.form
  &__input-wrapper
    display: flex
    flex-direction: column
    position: relative

  &__title
    color: $color-white
    font-size: 24px
    line-height: 24px
    margin-bottom: 20px
    text-align: center

    +above($breakpoints.sm)
      font-size: 32px
      line-height: 33px

  &__input-box
    display: flex
    flex-direction: column-reverse

  &__btn
    width: 100%
    margin-bottom: 20px

  &__input-description
    font-family: "Futura"
    color: $color-white
    font-size: 20px
    font-weight: 300
    padding-left: 5px
    margin-bottom: 5px

#status
  font-family: "Futura"
  text-align: center
  border-radius: 10px
  height: 100%
  padding: 10px
  width: 100%
  font-size: 18px
  font-weight: 800
  line-height: 20px
  position: absolute
  bottom: -30px
  height: 40px

#status.success
  background-color: $color-primary
  animation: status 4s ease forwards

#status.error
  background-color: $color-error
  color: $color-white
  animation: status 4s ease forwards

vendord = official
@keyframes status {
  0%{
    opacity: 0.8
    pointer-events: all
  }
  80%{
    opacity: 1
    pointer-events: all
  }
  100%{
    opacity: 0
    pointer-events: none
  }
}

.form-input
  height: 40px
  width: 100%
  padding: 20px
  border-radius: 10px
  background-color: $color-white
  font-size: 14px
  line-height: 20px
  border: none
  color: $color-dark
  outline: none
  margin-bottom: 20px

  +above($breakpoints.sm)
    height: 56px
    font-size: 16px
    line-height: 22px

  &:focus
    box-shadow: 0px 0px 0px 2px rgba(93, 208, 246, 1)

  &:focus + .form__input-description
    color: $color-blue-light
    border-radius: 5px

  &--text
    min-height: 80px
    resize: none

    +above($breakpoints.sm)
      min-height: 140px

input:-webkit-autofill,
input:-webkit-autofill:hover,
input:-webkit-autofill:focus,
textarea:-webkit-autofill,
textarea:-webkit-autofill:hover,
textarea:-webkit-autofill:focus,
select:-webkit-autofill,
select:-webkit-autofill:hover,
select:-webkit-autofill:focus
  border: 1px solid $color-white
  -webkit-text-fill-color: $color-dark
  -webkit-box-shadow: 0 0 0px 1000px $color-white inset
  -webkit-box-shadow: 0px 0px 0px 2px rgba(93, 208, 246, 1)
  transition: background-color 5000s ease-in-out 0s

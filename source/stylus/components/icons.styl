.svg
  width: 34px
  height: 34px
  transition: all 0.6s
  display: block

  &--mini
    width: 18px
    height: 18px

  &--small
    width: 24px
    height: 24px

  &--interactive
    width: 20px
    height: 20px
    +above($breakpoints.sm)
      width: 30px
      height: 30px

  &--static
    width: 30px
    height: 30px
    fill: $color-blue

    +above($breakpoints.sm)
      width: 45px
      height: 45px

    &:hover
      fill: $color-blue-light

.works
  &__layout,
  &__list
    display: flex
    justify-content: center
    flex-direction: column
    color: $color-white

  &__box-border
    height: 20px
    width: 100%
    box-shadow:
      0 1px rgba(255,255,255,.2) inset,
      0 3px 5px rgba(0,1,6,.5),
      0 0 1px 1px rgba(0,1,6,.2)

  &__dropdown
    display: flex
    justify-content: center
    align-items: center
    padding: 5px 45px
    cursor: pointer
    fill: $color-blue-light
    box-shadow:
      0 1px rgba(255,255,255,.2) inset,
      0 3px 5px rgba(0,1,6,.5),
      0 0 1px 1px rgba(0,1,6,.2)
    -webkit-tap-highlight-color: transparent

  &__dropdown-title
    font-family: "Futura"
    padding: 10px
    color: $color-blue-light

  &__dropdown-icon-arrow
    transition: 0.5s

.dropdown
  display: none

  &__list
    box-shadow: 0px 0px 93px 6px rgba(0, 0, 0, 0.55) inset

  &__item
    padding: 15px 5px
    display: flex
    align-items: center
    justify-content: center
    font-family: "Futura"
    font-weight: 500
    font-size: 20px
    color: $color-blue-light

  &__link-span
    color: $color-primary
    margin-left: 20px

.works__dropdown.trigger .works__dropdown-icon-arrow
  transform: rotate(-180deg)

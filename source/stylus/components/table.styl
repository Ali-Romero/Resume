.table
  border-collapse: collapse
  border-spacing: 0
  width: 320px
  display: table
  color: $color-blue-light
  font-size: 13px
  line-height: 30px

  +above($breakpoints.sm)
    width: 400px
    font-size: 15px
    line-height: 30px

  +above($breakpoints.md)
    width: 560px
    font-size: 18px
    line-height: 47px

  &__body
    box-shadow: 0px 0px 18px 11px rgba(0, 0, 0, 0.32)
    border-radius: 20px

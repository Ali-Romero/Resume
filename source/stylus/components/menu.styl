.menu
  display: none

  +above($breakpoints.md)
    display: flex

  &__list
    font-family: "Futura"
    font-size: 22px
    color: $color-blue-light
    display: flex

  &__item
    margin-right: 5px

    &:last-child
      margin-right: 0

  &__link
    position: relative
    transition: .4s ease-in-out
    border-radius: 30px
    cursor: pointer
    padding: 8px 8px

    &:active,
    &:hover
      box-shadow: 0px 0px 0px 2px rgba(93, 208, 246, 1)

    +above($breakpoints.lg)
      padding: 10px 14px

    +above($breakpoints.xl)
      padding: 17px 14px

    +above($breakpoints.xxl)
      padding: 17px 18px

    &:hover
      box-shadow: 0px 0px 0px 2px rgba(93, 208, 246, 1)
      -moz-box-shadow: 0px 0px 0px 2px rgba(93, 208, 246, 1)
      -webkit-box-shadow: 0px 0px 0px 2px rgba(93, 208, 246, 1)

.subtitle
  display: flex
  align-items: flex-end

  &__icon
    margin-right: 20px
    display: flex

  &__text
    font-family: "Serif"
    color: $color-white
    font-size: 25px
    line-height: 0.6
    font-weight: 600
    opacity: 0.9
  
    +above($breakpoints.sm)
      font-size: 35px

    +above($breakpoints.md)
      font-size: 40px
      font-weight: 600
